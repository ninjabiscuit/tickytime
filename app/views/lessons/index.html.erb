<div class="content-area clear">
  <% @lessons.each do |day, lessons| %>
    <div class="lesson-by-day">
      <h2>
        <%= time_tag lessons.first.start_at, "#{lessons.first.start_at.strftime("%a %d %b")} #{format_hour(lessons.first.start_at)} - #{format_hour(lessons.last.end_at)}", :class => "lesson-day-time" %>
        <%=  %>
      </h2>
      <% lessons.each_with_index do |lesson, index| %>
        <%= render_break(lesson, lessons) %>
        <%= render lesson %>
      <% end -%>
    </div>
  <% end -%>
</div>